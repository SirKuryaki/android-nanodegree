<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="22dp">

    <ImageView
        android:id="@+id/list_item_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/cover_content_description" />

    <TextView
        android:id="@+id/list_item_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/list_item_cover"
        android:layout_toRightOf="@id/list_item_cover"
        android:maxLines="1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/list_item_album_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_item_name_textview"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/list_item_cover"
        android:layout_toRightOf="@id/list_item_cover"
        android:maxLines="1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
